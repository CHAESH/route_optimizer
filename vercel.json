{
    "version": 2,
    "functions": {
        "api/*.js": {
            "runtime": "@vercel/node@latest"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "KAKAO_API_KEY": "@kakao_api_key"
    }
} 